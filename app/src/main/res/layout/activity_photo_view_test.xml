<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".uidemo.photoview.demo.PhotoViewTestActivity">

<!--    <Button-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="40dp"-->
<!--        android:text="切换图片"-->
<!--        android:onClick="onClickChangePic"/>-->
    
    <com.android.study.example.uidemo.photoview.PhotoView
        android:id="@+id/photo_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/layout_btn_cicle"
        android:orientation="vertical"
        android:onClick="onClickBack"
        >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_btn_back"
            />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="测试状态栏"
        android:textSize="14sp"
        android:layout_marginTop="60dp"
        android:onClick="onClickStatusBarTest"/>

</FrameLayout>