<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".uidemo.darkmode.DarkModeTestActivity"
    android:padding="20dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启深色模式"
        android:onClick="onClickBtnStartDarkMode"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消深色模式"
        android:onClick="onClickBtnCancelDarkMode"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="@color/color_text_1"
        android:text="深色模式-文字显示"
        android:background="@color/color_bg_1"
        />

</LinearLayout>