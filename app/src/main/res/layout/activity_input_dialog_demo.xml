<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uidemo.inputdialog.InputDialogDemoActivity"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示input dialog"
        android:textAllCaps="false"
        android:onClick="onBtnShowDialogClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示CommonDialog"
        android:textAllCaps="false"
        android:onClick="onBtnShowCommonDialogClick"/>


    <EditText
        android:id="@+id/et_dialog_input"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:hint="请输入内容"
        android:layout_margin="10dp"/>

</LinearLayout>