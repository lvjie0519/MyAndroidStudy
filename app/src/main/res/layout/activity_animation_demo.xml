<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uidemo.animation.AnimationDemoActivity"
    android:orientation="vertical"
    android:background="#333333">

    <Button
        android:id="@+id/btn_anim"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="属性动画-平移"/>

    <View
        android:id="@+id/view_anim"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/icon_sweeper_circular"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_start_rotate"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="开始旋转动画" />
        <Button
            android:id="@+id/btn_stop_rotate"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:text="停止旋转动画"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <View
            android:id="@+id/iv_scan_ing"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/ic_scan_ing"
            android:layout_centerInParent="true"
            />
        <View
            android:id="@+id/iv_nfc_lock"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_default_nfc_lock"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

</LinearLayout>