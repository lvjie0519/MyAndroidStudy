<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".androidapi.OrientationTestActivity">


    <Button
        android:id="@+id/btn_screen_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机横屏"/>

    <Button
        android:id="@+id/btn_screen_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机竖屏"/>

    <Button
        android:id="@+id/btn_dy_theme_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动态换肤-day"/>

    <Button
        android:id="@+id/btn_dy_theme_night"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动态换肤-night"/>

</LinearLayout>