<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".androidapi.BlueMainTestActivity">

    <Button
        android:id="@+id/btn_check_self_blue_isopen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="检查蓝牙是否开启"/>
    <Button
        android:id="@+id/btn_scan_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="扫描蓝牙设备"/>
    <Button
        android:id="@+id/btn_stop_scan_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止扫描"/>

    <Button
        android:id="@+id/btn_start_connec_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始连接"/>

</LinearLayout>