<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.study.example.androidapi.AndroidApiTestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_get_screen_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取屏幕相关信息"/>

            <Button
                android:id="@+id/btn_alter_DisplayMetrics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改屏幕相关信息"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_go_next_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="go next page"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_write_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="写文件"/>
            <Button
                android:id="@+id/btn_read_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="读文件"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_package_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取package 相关信息"/>

            <Button
                android:id="@+id/btn_app_file_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取app 文件路径相关信息"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_test_nfc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试手机是否具有NFC"/>

            <Button
                android:id="@+id/btn_test_operators"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试手机运营商信息"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_test_wifi_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取手机wifi信息"/>

            <Button
                android:id="@+id/btn_test_build_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取Build相关信息"/>

        </LinearLayout>

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="控件： 180*wrap_content dp"/>

        <Button
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="控件： 360*60 dp"/>

        <TextView
            android:id="@+id/tv_show_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_get_gps_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取手机gps打开状态"/>

            <Button
                android:id="@+id/btn_start_system_gps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开系统gps设置页面"/>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无损FPS实时显示"
            android:onClick="onClickShowPageFps"/>

        <com.android.study.example.androidapi.views.MyFpsTestView
            android:id="@+id/view_myfps"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="#a12"/>

        <com.android.study.example.uidemo.dragging.DraggingButton
            android:id="@+id/tv_dragging"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:background="@drawable/drag_button_bg"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:text="悬浮\n按钮1"
            android:textSize="15sp"
            android:layout_gravity="right"
            android:textColor="#ffffff"/>

    </LinearLayout>

</ScrollView>

